
<div class="mt-4 p-5 bg-secondary-subtle rounded">
  <h1 class="display-4">
    <%= @friend.first_name %>
    <%= @friend.last_name %>
  </h1>  
  <p class="lead">
    <%= @friend.email %>  |  <%= @friend.phone %>  |  <%= @friend.twitter %>
  </p>
  <br>
  <div>
    <%= link_to "Edit", edit_friend_path(@friend), class:"btn btn-dark" %> 
    <%= link_to "Back", :back, class:"btn btn-dark" %>

    <%= link_to "Delete", @friend, data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  }, class:"btn btn-danger" %>
  </div>
</div>
